@model WebApplicationMVC.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Gender</th>
            <th>City</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.EmployeeId</td>
            <td>@Model.Name</td>
            <td>@Model.Gender</td>
            <td>@Model.City</td>
            <td>@Model.DateOfBirth.Year</td>
        </tr>
    </tbody>
</table>

<br /><br /><br />
@Html.ActionLink("Back to Employee List", "Detail_department", new { departmentId = Model.DepartmentId })<br />
@Html.ActionLink("All Employee details", "AllEmployeeDetails", "Employee")